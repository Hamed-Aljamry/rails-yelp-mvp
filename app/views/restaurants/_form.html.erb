<%= simple_form_for(@restaurant) do |f| %>
  <%= f.input :name, placeholder: "Write the restaurant name here" %>
  <%= f.input :address, placeholder:"Write the address here" %>
  <%= f.input :category, placeholder: "choose cuisine: chinese, italian, japanese, french, belgian " %>
  <%= f.submit "ADD", class: "btn btn-primary" %>
<% end %>
